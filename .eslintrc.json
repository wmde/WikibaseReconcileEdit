{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki",
		"wikimedia/jsduck"
	],
	"globals": {
		"require": "readonly",
		"module": "readonly"
	},
	"rules": {
		"max-len": "off",
		"mediawiki/valid-package-file-require": "off",
		"no-jquery/no-global-selector": "off",
		"no-shadow": "error"
	}
}
